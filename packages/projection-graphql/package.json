{
  "name": "@manifesto-ai/projection-graphql",
  "version": "0.2.0",
  "description": "GraphQL projection layer for Manifesto domains",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    },
    "./resolvers": {
      "types": "./dist/resolvers/index.d.ts",
      "import": "./dist/resolvers/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@manifesto-ai/core": "^0.2.0",
    "graphql": "^16.0.0"
  },
  "devDependencies": {
    "@manifesto-ai/core": "^0.2.0",
    "@types/node": "^22.19.2",
    "@vitest/coverage-v8": "^2.1.9",
    "graphql": "^16.9.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9",
    "zod": "^3.25.0"
  },
  "keywords": [
    "manifesto",
    "graphql",
    "projection",
    "schema",
    "domain"
  ],
  "author": "Manifesto Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manifesto-ai/projection.git",
    "directory": "packages/projection-graphql"
  },
  "homepage": "https://github.com/manifesto-ai/projection/tree/main/packages/projection-graphql#readme",
  "bugs": {
    "url": "https://github.com/manifesto-ai/projection/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
